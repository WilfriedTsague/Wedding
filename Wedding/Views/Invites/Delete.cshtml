@model Wedding.Models.Invite

<h2>Supprimer l'invité</h2>

<div>
    <h4>Voulez-vous vraiment supprimer cet invité ?</h4>
    <div>
        <strong>Nom :</strong> @Model.NomInvite
        <br />
        <strong>Prénom :</strong> @Model.PrenomInvite
        <br />
        <strong>Table :</strong> @Model.Table.NomTable
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>
